				<label>Email : </label><span>{{user.email}}</span>
			</li>
			<li>
				<label>Speudo : </label><span>{{user.speudo}}</span>
			</li>
			<li>
				<label>Country : </label><span>{{user.country}}</span>
			</li>
		</ul>
