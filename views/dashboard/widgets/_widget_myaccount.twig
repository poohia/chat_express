<li class="z-depth-1 portlet  white theme-color-text" id="portlet-myaccount">
	<div class="portlet-header white ">
	<span class="portlet-left">	<span class="fa fa-user" aria-hidden="true"></span> My account 
		<span class="portlet-actions"> <a href="{{url("my-account")}}" class="fa fa-pencil  theme-color-text-2">	</a></span></span>
		<i class="fa fa-times close-widget   theme-color-text-2" aria-hidden="true"></i>
		<i class="fa fa-minus theme-color-text-2 btn-mini-portlet" aria-hidden="true"></i>
		<span class="portlet-middle-title" > &nbsp; </span>
	</div>
	<div class="portlet-content">
		<ul>
			<li class="text-center">
			 <img src="{{ user.avatar }}" class="responsive-img circle" alt="avatar"></img>
			</li>
			<li>
				<label>Email : </label><span title="email">{{user.email}}</span>
			</li>
			<li>
				<label >Pseudo : </label><span title="pseudo">{{user.name}}</span>
			</li>
			<li>
				<label>Sexe : </label><span title="sexe">{{user.sexe}}</span>
			</li>
			<li>
				<label>Numero : </label><span title="number mobile">{{user.numero}}</span>
			</li>
		</ul>
	</div>
</li>